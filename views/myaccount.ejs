<%- include('./partials/header') %>

<div class="min-h-screen flex items-center justify-center bg-white px-4">
    <div class="max-w-xl w-full bg-white rounded-xl shadow-md p-8">
        <h1 class="text-3xl font-bold mb-6 text-center">My Account</h1>

        <div class="space-y-4 text-gray-700 text-lg">
            <p><strong>Name:</strong> <span class="text-gray-900"><%= user.fullname %></span></p>
            <p><strong>Email:</strong> <span class="text-gray-900"><%= user.email %></span></p>
            <p><strong>Registered on:</strong> 
                <span class="text-gray-900"><%= user.createdAt ? user.createdAt.toDateString() : "N/A" %></span>
            </p>
        </div>

        <div class="mt-8 flex flex-col sm:flex-row sm:justify-between items-center gap-4">
            <a href="/orders" 
               class="text-blue-600 hover:text-blue-800 underline text-base">
                View My Orders
            </a>

            <form action="/users/logout" method="get">
                <button type="submit" 
                    class="bg-red-500 text-white px-5 py-2 rounded-full hover:bg-red-600 transition-all">
                    Logout
                </button>
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
